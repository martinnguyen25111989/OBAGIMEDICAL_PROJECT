@model ProductDetailsModel
@{
    var addtocomparelink = Url.RouteUrl("AddProductToCompare", new { productId = Model.Id });
}
@if (Model.CompareProductsEnabled)
{
    <div class="compare-products">
            <button type="button" class="button-2 add-to-compare-list-button btn btn-light" onclick="AjaxCart.addproducttocomparelist('@addtocomparelink');return false;" title="@T("Products.Compare.AddToCompareList")"><i class="icon-compare_arrows"></i></button>
    </div>
}