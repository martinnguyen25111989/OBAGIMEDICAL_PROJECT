@model IList<CategoryModel>

@using Nop.Core.Domain.Catalog

@if (Model.Count > 0)
{
    <div class="container">
        <div class="category-grid home-page-category-grid cx_home-page-category-grid">
            <div class="row my-5">
                <div class="col-md-8 offset-md-2">
                    <h2 class="cx_headline">Xem theo danh mục</h2>
                    <p class="cx_dsc">Khỏe hơn với các thương hiệu uy tín của OBAGI</p>
                </div>
            </div>
            <div id="swiper-category" class="item-grid swiper">
                <div class="swiper-wrapper">
                @foreach (var item in Model)
                {
                    <div class="item-box swiper-slide">
                            <figure class="category-item">
                                <div class="picture">
                                    <a href="@(Url.RouteUrl<Category>(new { SeName = item.SeName }))" title="@item.PictureModel.Title">
                                        <img alt="@item.PictureModel.AlternateText" src="@item.PictureModel.ImageUrl" title="@item.PictureModel.Title" />
                                    </a>
                                </div>
                                <figcaption>
                                    <h2 class="title">
                                        <a href="@(Url.RouteUrl<Category>(new { SeName = item.SeName }))" title="@item.PictureModel.Title">
                                            @item.Name
                                        </a>
                                    </h2>
                                </figcaption>
                        </figure>
                    </div>
                }
                </div>
                <div class="swiper-button-next"></div>
                <div class="swiper-button-prev"></div>
                <div class="swiper-pagination"></div>
                <!-- Link Swiper's CSS -->
                <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css" />
                <!-- Swiper JS -->
                <script asp-location="Footer" src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js"></script>
                <script asp-location="Footer">
                    new Swiper('#swiper-category', {
                        slidesPerView: 1,
                        spaceBetween: 30,
                        cssMode: true,
                        navigation: {
                            nextEl: ".swiper-button-next",
                            prevEl: ".swiper-button-prev",
                        },
                        pagination: {
                            clickable: true,
                            el: '.swiper-pagination',
                        },
                        breakpoints: {
                            "@@0.00": {
                            slidesPerView: 1,
                            spaceBetween: 10,
                            },
                            "@@0.75": {
                            slidesPerView: 2,
                            spaceBetween: 20,
                            },
                            "@@1.00": {
                            slidesPerView: 3,
                            spaceBetween: 40,
                            },
                            "@@1.50": {
                            slidesPerView: 6,
                            spaceBetween: 50,
                            },
                        },
                    });
                </script>

            </div>
        </div>
    </div>
  
}